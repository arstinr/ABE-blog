<%= form_with model: [ @article, @article.comments.build ], class: "comment-form" do |form| %>
  <div class="form-group">
    <%= form.label :commenter %>
    <%= form.text_field :commenter, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, Visible::VALID_STATUSES, { selected: 'public' }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
